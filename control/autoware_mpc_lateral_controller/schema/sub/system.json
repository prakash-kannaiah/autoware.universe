{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "MPC Lateral Controller Params",
  "type": "object",
  "definitions": {
    "system": {
      "type": "object",
      "properties": {
        "traj_resample_dist": {
          "type": "number",
          "description": "distance of waypoints in resampling [m]",
          "default": 0.1
        },
        "use_steer_prediction": {
          "type": "boolean",
          "description": "flag for using steer prediction (do not use steer measurement)",
          "default": false
        },
        "admissible_position_error": {
          "type": "number",
          "description": "stop vehicle when following position error is larger than this value [m]",
          "default": 5.0
        },
        "admissible_yaw_error_rad": {
          "type": "number",
          "description": "stop vehicle when following yaw angle error is larger than this value [rad]",
          "default": 1.57
        }
      },
      "required": [
        "traj_resample_dist",
        "use_steer_prediction",
        "admissible_position_error",
        "admissible_yaw_error_rad"
      ],
      "additionalProperties": false
    }
  },
  "properties": {
    "/**": {
      "type": "object",
      "properties": {
        "ros__parameters": {
          "$ref": "#/definitions/system"
        }
      },
      "required": ["ros__parameters"],
      "additionalProperties": false
    }
  },
  "required": ["/**"],
  "additionalProperties": false
}
